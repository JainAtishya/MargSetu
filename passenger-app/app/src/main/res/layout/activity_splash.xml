<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">

    <!-- Bus container for animation -->
    <FrameLayout
        android:id="@+id/busContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <!-- Main bus logo -->
        <ImageView
            android:id="@+id/busLogo"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/splash_bus_logo"
            android:contentDescription="@string/bus_icon"
            android:scaleX="0"
            android:scaleY="0" />

    </FrameLayout>

    <!-- Camera overlay for transition effect -->
    <View
        android:id="@+id/cameraOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/camera_transition_overlay"
        android:alpha="0"
        android:visibility="gone" />

    <!-- Title container -->
    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0">

        <!-- MargSetu text -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:shadowColor="@color/black_50"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- Passenger subtitle -->
        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passenger_app"
            android:textSize="20sp"
            android:textColor="@color/white_70"
            android:fontFamily="sans-serif-light"
            android:shadowColor="@color/black_50"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

    <!-- Loading indicator at bottom -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0">

        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:indeterminateTint="@color/white"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading_text"
            android:textColor="@color/white_70"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:shadowColor="@color/black_50"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

</FrameLayout>