<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Bus Number -->
            <TextView
                android:id="@+id/busNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MH12AB1234"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <!-- Frequency -->
            <TextView
                android:id="@+id/frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/chip_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp" />

        </LinearLayout>

        <!-- Route Name -->
        <TextView
            android:id="@+id/routeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mumbai - Pune Express"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <!-- Stations -->
        <TextView
            android:id="@+id/stations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mumbai Central â†’ Pune Station"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="6dp"
            android:drawableTint="@color/text_hint"
            android:layout_marginBottom="12dp" />

        <!-- Time and Fare Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Departure Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Departure"
                    android:textSize="11sp"
                    android:textColor="@color/text_hint" />

                <TextView
                    android:id="@+id/departureTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:30 AM"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Arrow -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â†’"
                android:textSize="18sp"
                android:textColor="@color/primary_color"
                android:layout_marginHorizontal="12dp" />

            <!-- Arrival Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arrival"
                    android:textSize="11sp"
                    android:textColor="@color/text_hint" />

                <TextView
                    android:id="@+id/arrivalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:15 AM"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- SMS Query Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSmsQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ðŸ“± SMS Query"
            android:textSize="12sp"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:icon="@drawable/ic_sms"
            app:iconSize="16dp"
            app:strokeColor="@color/primary_color"
            android:textColor="@color/primary_color" />

    </LinearLayout>

</androidx.cardview.widget.CardView>