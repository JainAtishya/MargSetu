<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <!-- Status Indicator -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/circle_indicator"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp" />

            <!-- Bus Number -->
            <TextView
                android:id="@+id/busNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MH12AB1234"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <!-- Network Indicator -->
            <ImageView
                android:id="@+id/networkIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_network_check"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:contentDescription="Slow Network" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:background="@drawable/chip_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Route Name -->
        <TextView
            android:id="@+id/routeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mumbai - Pune Express"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="8dp" />

        <!-- Driver Info -->
        <TextView
            android:id="@+id/driverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Driver: Rajesh Kumar"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="6dp"
            android:drawableTint="@color/text_hint"
            android:layout_marginBottom="12dp" />

        <!-- Timing and Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <!-- Timing -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:30 AM â†’ 11:15 AM"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_schedule"
                    android:drawablePadding="6dp"
                    android:drawableTint="@color/primary_color" />

                <TextView
                    android:id="@+id/estimatedArrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ETA: 5 mins"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Seats Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/seatsInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/50 seats available"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Occupancy -->
            <TextView
                android:id="@+id/occupancyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Medium Occupancy"
                android:textSize="12sp"
                android:textColor="@color/warning_color"
                android:drawableStart="@drawable/ic_occupancy"
                android:drawablePadding="4dp"
                android:drawableTint="@color/warning_color" />

            <!-- View Details Button -->
            <Button
                android:id="@+id/viewDetailsButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/view_details"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:paddingHorizontal="16dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>