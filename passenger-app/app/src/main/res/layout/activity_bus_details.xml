<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/primary_color"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- Network Status Banner -->
        <LinearLayout
            android:id="@+id/networkStatusView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/warning_color"
            android:padding="8dp"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/networkStatusIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_network_check"
                android:layout_marginEnd="8dp"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/networkStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slow Network"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Live Map Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            android:foreground="?android:attr/selectableItemBackground">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Map host; MapView is added programmatically to avoid inflation-time crashes -->
                <FrameLayout
                    android:id="@+id/mapHost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- Map Placeholder/Overlay -->
                <TextView
                    android:id="@+id/mapPlaceholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading live map..."
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:padding="10dp"
                    android:layout_gravity="top|center_horizontal"
                    android:background="@color/primary_light"
                    android:visibility="gone" />

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bus Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bus_details"
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/refreshButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_refresh"
                        android:contentDescription="Refresh"
                        android:minWidth="0dp"
                        android:minHeight="0dp" />

                </LinearLayout>

                <!-- Bus Number and Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <View
                        android:id="@+id/statusIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/circle_indicator"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:id="@+id/busNumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MH12AB1234"
                        android:textSize="20sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:background="@drawable/chip_background"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Route -->
                <TextView
                    android:id="@+id/routeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mumbai - Pune Express"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <!-- Location and ETA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Location"
                            android:textSize="12sp"
                            android:textColor="@color/text_hint" />

                        <TextView
                            android:id="@+id/currentLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Near City Center"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/estimated_arrival"
                            android:textSize="12sp"
                            android:textColor="@color/text_hint" />

                        <TextView
                            android:id="@+id/estimatedArrival"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ETA: 5 mins"
                            android:textSize="14sp"
                            android:textColor="@color/primary_color"
                            android:textStyle="bold"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Occupancy and Seats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/occupancyText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medium Occupancy"
                        android:textSize="13sp"
                        android:textColor="@color/warning_color"
                        android:drawableStart="@drawable/ic_occupancy"
                        android:drawablePadding="6dp"
                        android:drawableTint="@color/warning_color" />

                    <TextView
                        android:id="@+id/seatsInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="15/50 seats"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="end" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Driver Details Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/driver_details"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_person"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="2dp"
                        android:tint="@color/text_hint" />

                    <TextView
                        android:id="@+id/driverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rajesh Kumar"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_phone"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="2dp"
                        android:tint="@color/text_hint" />

                    <TextView
                        android:id="@+id/driverPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+919876543210"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                </LinearLayout>

                <Button
                    android:id="@+id/callDriverButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/call_driver"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_primary"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/shareLocationButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/share_location"
                android:textSize="13sp"
                android:textColor="@color/primary_color"
                android:background="@drawable/button_outline"
                android:drawableTop="@drawable/ic_share"
                android:drawableTint="@color/primary_color" />

            <Button
                android:id="@+id/smsStatusButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="SMS Status"
                android:textSize="13sp"
                android:textColor="@color/secondary_color"
                android:background="@drawable/button_outline_secondary"
                android:drawableTop="@drawable/ic_sms"
                android:drawableTint="@color/secondary_color" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>