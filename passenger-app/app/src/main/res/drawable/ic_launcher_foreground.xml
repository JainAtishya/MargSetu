                    android:type="linear"
                    android:startX="-22"
                    android:startY="-8"
                    android:endX="22"
                    android:endY="12"
                    android:startColor="#FFFFFF"
                    android:centerColor="#F8F9FA"
                    android:endColor="#E8EAF6" />
            </aapt:attr>
        </path>
        
        <!-- Front windshield -->
        <path
            android:fillColor="#1565C0"
            android:fillAlpha="0.15"
            android:pathData="M-20,-6 L-14,-6 L-14,6 L-20,8 Z"/>
        
