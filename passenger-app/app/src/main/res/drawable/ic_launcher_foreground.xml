                    android:type="radial"
                    android:centerX="12"
                    android:centerY="12"
                    android:gradientRadius="4"
                    android:startColor="#616161"
                    android:endColor="#212121" />
            </aapt:attr>
        </path>
        
        <!-- Passenger-specific accent line with warm gradient -->
        <path
            android:pathData="M-19,0 L19,0 Q20,0 20,1 L20,1 Q20,2 19,2 L-19,2 Q-20,2 -20,1 L-20,1 Q-20,0 -19,0 Z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:type="linear"
                    android:startX="-20"
                    android:startY="0"
                    android:endX="20"
                    android:endY="0"
                    android:startColor="#FF6B35"
                    android:centerColor="#F7931E"
                    android:endColor="#FFD23F" />
