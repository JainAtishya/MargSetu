        <path
            android:fillColor="#1565C0"
            android:fillAlpha="0.15"
            android:pathData="M1,-6 L5,-6 Q6,-6 6,-5 L6,5 Q6,6 5,6 L1,6 Q0,6 0,5 L0,-5 Q0,-6 1,-6 Z"/>
            
        <path
            android:fillColor="#1565C0"
            android:fillAlpha="0.15"
            android:pathData="M11,-6 L15,-6 Q16,-6 16,-5 L16,5 Q16,6 15,6 L11,6 Q10,6 10,5 L10,-5 Q10,-6 11,-6 Z"/>

        <!-- Premium wheels with gradient -->
        <path
            android:pathData="M-16,12 A4,4 0 1,1 -8,12 A4,4 0 1,1 -16,12 Z">
            <aapt:attr name="android:fillColor">
                <gradient
                    android:type="radial"
                    android:centerX="-12"
                    android:centerY="12"
                    android:gradientRadius="4"
                    android:startColor="#616161"
                    android:endColor="#212121" />
