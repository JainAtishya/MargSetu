            android:fillColor="#FFFFFF"
            android:fillAlpha="0.9"
            android:pathData="M-3,2 L3,2 Q4,2 4,3 L4,5 Q4,6 3,6 L-3,6 Q-4,6 -4,5 L-4,3 Q-4,2 -3,2 Z"/>
        
