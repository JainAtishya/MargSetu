<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_header"
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸš"
                        android:textSize="32sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_language"
                        style="@style/SecondaryButtonStyle"
                        android:layout_width="64dp"
                        android:layout_height="52dp"
                        android:text="ðŸŒ"
                        android:textSize="24sp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginEnd="8dp"
                        app:iconSize="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_logout"
                        style="@style/SecondaryButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/logout"
                        android:textSize="12sp"
                        app:icon="@drawable/ic_logout"
                        app:iconSize="16dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_welcome"
                    style="@style/HeadingTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_message"
                    android:gravity="start"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tv_driver_info"
                    style="@style/SubheadingTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/tv_bus_info"
                    style="@style/SubheadingTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Status Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_status"
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/current_status"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_journey_status"
                        style="@style/StatusOnlineText"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/journey_inactive"
                        android:drawableStart="@drawable/ic_status_offline"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    android:layout_marginVertical="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_gps_status"
                            style="@style/SubheadingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/gps_disabled"
                            android:drawableStart="@drawable/ic_gps_off"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_network_status"
                            style="@style/SubheadingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/status_offline"
                            android:drawableStart="@drawable/ic_network_off"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_location_updates"
                            style="@style/SubheadingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/location_stopped"
                            android:drawableStart="@drawable/ic_location_off"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_last_update"
                            style="@style/SubheadingTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/never"
                            android:drawableStart="@drawable/ic_time"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:textSize="14sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Journey Control Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_journey_control"
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/journey_control"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_journey_toggle"
                    style="@style/PrimaryButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/start_journey"
                    android:textSize="18sp"
                    app:icon="@drawable/ic_play"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SOS Emergency Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_emergency"
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency_alert"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emergency_description"
                    style="@style/SubheadingTextStyle"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_sos"
                    style="@style/SOSButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="@string/sos_button"
                    android:textSize="20sp"
                    app:icon="@drawable/ic_emergency"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Loading Indicator -->
        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>